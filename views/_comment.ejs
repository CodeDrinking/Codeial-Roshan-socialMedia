<li id="comment-<%= comment._id %>">
  <article class="row">
    <div>
      <div>
        <div class="comment-body">
          <header>
            <div class="comment-user"><i class="fa fa-user"></i>
              <%= comment.user.name %>
            </div>
            <!-- <time class="comment-date" datetime="16-12-2014 01:05"><i class="fa fa-clock-o"></i> <%= comment.user.updatedAt%></time> -->
          </header>
          <div class="comment-post">
            <p>
              <%= comment.content %>
                <% if(locals.user && locals.user.id==comment.user.id ) {%>
                  <small>
                    <a class="delete-comment-button" href="/comments/destroy/<%= comment.id %>">Delete Comment</a>
                  </small>
                  <% } %>
            </p>
            <small>
              <% if (locals.user){ %>
                  <a class="toggle-like-button" data-likes="<%= comment.likes.length %>" href="/likes/toggle/?id=<%= comment._id %>&type=Comment">
                          <%= comment.likes.length %> Likes
                  </a>
              <% }else{ %>
                  <%= comment.likes.length %> Likes
              <% } %>
          </small>
          </div>
        </div>
      </div>
  </article>
</li>